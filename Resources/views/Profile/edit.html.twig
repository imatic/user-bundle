{% extends "ImaticUserBundle::layout.html.twig" %}

{% block headline %}
    {{ 'User Profile Edit'|trans({}, 'ImaticUserBundle') }}
{% endblock %}

{% block sidebar %}
    {% include 'ImaticUserBundle:Profile:menu.html.twig' %}
{% endblock %}

{% block fos_user_content %}

    <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST"
          class="fos_user_profile_edit">
        {{ form_widget(form) }}
        <div>
            <input type="submit" class="btn btn-primary"
                   value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}"/>
        </div>
    </form>

{% endblock %}
