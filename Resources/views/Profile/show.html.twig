{% extends "ImaticUserBundle::layout.html.twig" %}

{% block headline %}
    {{ 'User Profile'|trans({}, 'ImaticUserBundle') }}
{% endblock %}

{% block fos_user_content %}

    {% embed 'ImaticViewBundle:Layout:grid.html.twig' with {rows: [{ cols: {sidebar: {size: 3}, profile: {size:9} } }] } %}
        {% block sidebar %}
            {% include 'ImaticUserBundle:Profile:menu.html.twig' %}
        {% endblock %}
        {% block profile %}

            {% set fields = [
            {name: 'username', label: 'profile.show.username'|trans({}, 'FOSUserBundle')},
            {name: 'email', label: 'profile.show.email'|trans({}, 'FOSUserBundle')}
            ] %}
            {{ include('ImaticViewBundle:Component:show.html.twig', { item: user, fields: fields }) }}

        {% endblock %}
    {% endembed %}

{% endblock %}
