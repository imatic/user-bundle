{% extends "@ImaticUser/layout.html.twig" %}

{% block headline %}
    {{ 'User Profile'|trans({}, 'ImaticUserBundle') }}
{% endblock %}

{% block user_content %}
    <div class="profile-show">
        {% embed '@ImaticView/Layout/grid.html.twig' with {rows: [{ cols: {sidebar: {size: 3}, profile: {size:9} } }] } %}
            {% block sidebar %}
                {% include '@ImaticUser/Profile/menu.html.twig' %}
            {% endblock %}
            {% block profile %}

                {% set fields = [
                {name: 'username', label: 'Username'},
                {name: 'email', label: 'Email'}
                ] %}
                {{ include('@ImaticView/Component/show.html.twig', { item: user, fields: fields, show: {translationDomain: 'ImaticUserBundle'} }) }}

            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}
