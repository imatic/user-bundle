{% extends "@ImaticUser/layout.html.twig" %}

{% block headline 'layout.login'|trans({}, 'ImaticUserBundle') %}

{% block action %}
    {% block fos_user_content %}
        <div class="login">
            {% set application_name = app_name %}
            <form action="{{ path("fos_user_security_check") }}" method="post" autocomplete="off" role="form">

                {% block login %}
                    {% embed '@ImaticView/Layout/grid.html.twig' with {rows: [{ cols:{login: {size: 4, offset: 4} } }] } %}
                        {% block layout %}
                            <div class="container">
                                {% for row_options in rows %}
                                    {{ block('row') }}
                                {% endfor %}
                            </div>
                        {% endblock %}

                        {% block login %}

                            {% embed '@ImaticView/Component/panel.html.twig' %}
                                {% import "@ImaticView/Component/message.html.twig" as message %}
                                
                                {% set panel = {type: 'app'} %}
                                {% block panel_header %}
                                    {%- if application_name is not empty -%}
                                        <h1>{{ application_name }}</h1>
                                    {%- endif -%}
                                {% endblock %}
                                {% block panel_body %}
                                    <div class="form-group">
                                        {% if error %}
                                            {{ message.message('danger', error.messageKey|trans(error.messageData, 'security')) }}
                                        {% endif %}
                                        <label for="username">{{ 'Username'|trans({}, 'ImaticUserBundle') }}</label>
                                        <input type="text"
                                               class="input-lg form-control"
                                               id="username"
                                               name="_username"
                                               value="{{ last_username }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="password">{{ 'Password'|trans({}, 'ImaticUserBundle') }}</label>
                                        <input type="password" class="input-lg form-control" id="password"
                                               name="_password">
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label for="remember_me">
                                                <input type="checkbox" id="remember_me" name="_remember_me"
                                                       value="on">{{ 'security.login.remember_me'|trans({}, 'ImaticUserBundle') }}
                                            </label>
                                        </div>
                                    </div>

                                {% endblock %}
                                {% block panel_footer %}

                                    <input type="submit" id="_submit" name="_submit"
                                           class="btn btn-primary btn-lg btn-block"
                                           value="{{ 'security.login.submit'|trans({}, 'ImaticUserBundle') }}">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

                                    <div class="mt-3 text-center">
                                        <a href="{{ path('fos_user_resetting_request') }}">
                                            {{ 'Forgotten password'|trans({}, 'ImaticUserBundle') }}
                                        </a>
                                    </div>

                                {% endblock %}
                            {% endembed %}

                        {% endblock %}
                    {% endembed %}
                {% endblock %}

            </form>
        </div>
    {% endblock fos_user_content %}
{% endblock action %}
