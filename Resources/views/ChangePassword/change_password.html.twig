{% extends "@ImaticUser/layout.html.twig" %}

{% block headline %}
    {{ 'Change password'|trans({}, 'ImaticUserBundle') }}
{% endblock %}

{% block user_content %}
    <div class="change-password">
        {% embed '@ImaticView/Layout/grid.html.twig' with {rows: [{ cols: {sidebar: {size: 3}, form: {size:9} } }] } %}
            {% block sidebar %}
                {{ include('@ImaticUser/Profile/menu.html.twig') }}
            {% endblock %}
            {% block form %}
                {{ include('@ImaticView/Component/form.html.twig', {form: form}, with_context = false) }}
            {% endblock %}
        {% endembed %}
    </div>
{% endblock user_content %}
